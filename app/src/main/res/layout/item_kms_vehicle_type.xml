<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:paddingVertical="@dimen/_6sdp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_bg_color"
            android:layout_width="@dimen/_15sdp"
            android:background="@drawable/bg_radius_3"
            android:layout_height="@dimen/_15sdp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_vehicle_name"
            android:layout_width="@dimen/_0sdp"
            android:layout_weight="7"
            style="@style/poppins_regular_400_14"
            android:textColor="?editTextColor"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_kms"
            android:layout_width="@dimen/_0sdp"
            android:layout_weight="3"
            android:lines="1"
            android:ellipsize="end"
            android:layout_gravity="end"
            android:gravity="end"
            style="@style/poppins_medium_500_14"
            android:textColor="?editTextColor"
            android:alpha="0.4"
            android:layout_height="wrap_content"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>