<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorBgHomeManagement"
    tools:context=".ui.profile.ProfileFragment">

   <!-- <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar" />-->


<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_main"
    android:layout_width="match_parent"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_height="@dimen/_0sdp">


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/_15sdp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/_15sdp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_title"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/gl_right"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="@string/my_co2_savings"
                    android:visibility="gone"
                    style="@style/poppins_semi_bold_600_18"
                    android:textColor="?colorTextView"
                    app:layout_constraintStart_toStartOf="@id/gl_left"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_des"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/gl_left"
                    app:layout_constraintEnd_toEndOf="@id/gl_right"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="?colorTextView"
                    android:alpha="0.6"
                    android:visibility="gone"
                    android:text="@string/welcome_to_your_co2_savings_dashboard_here_you_can_view_your_survey_history_and_see_detailed_reports_on_your_co2_savings"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_new_survey"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tv_des"
                    android:background="?colorMyCo2MovingTitle"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        style="@style/divider_line"
                        android:background="@color/color_primary"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_new_survey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/_17sdp"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:textColor="@color/color_primary"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:focusable="true"
                        android:textSize="@dimen/_12ssp"
                        app:textAllCaps="true"
                        android:fontFamily="@font/poppins_semi_bold_600"
                        android:focusableInTouchMode="true"
                        android:text="@string/new_survey_available_now_click_here_to_take_the_latest_survey_and_contribute_to_our_co2_savings"
                        app:layout_constraintTop_toBottomOf="@id/view1"/>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        style="@style/divider_line"
                        android:background="@color/color_primary"
                        app:layout_constraintTop_toBottomOf="@id/tv_new_survey"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_benefits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="@string/benefits"
                    style="@style/poppins_semi_bold_600_18"
                    android:textColor="?colorTextView"
                    app:layout_constraintStart_toStartOf="@id/gl_left"
                    app:layout_constraintTop_toBottomOf="@id/cl_new_survey"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_0sdp"
                    android:text="@string/in_total_saving"
                    android:layout_marginStart="@dimen/_3sdp"
                    style="@style/poppins_medium_500_18"
                    android:textColor="?colorTextView"
                    android:alpha="0.4"
                    app:layout_constraintBottom_toBottomOf="@id/tv_benefits"
                    app:layout_constraintTop_toTopOf="@id/tv_benefits"
                    app:layout_constraintStart_toEndOf="@id/tv_benefits"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_co2_emi"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/gl_left"
                    app:layout_constraintEnd_toEndOf="@id/gl_right"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:background="?imgCo2Emission"
                    app:layout_constraintTop_toBottomOf="@id/tv_benefits">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_co2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_co2"
                        android:layout_marginStart="@dimen/_15sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_co2_emi"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/color_text"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_30sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/poppins_semi_bold_600_18"
                        android:text="@string/co2_emissions_saved"
                        app:autoSizeMaxTextSize="@dimen/_18ssp"
                        app:autoSizeMinTextSize="@dimen/_2ssp"
                        android:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="1sp"
                        app:layout_constraintStart_toEndOf="@id/iv_co2"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/weight"
                        style="@style/poppins_regular_400_14"
                        android:textColor="@color/color_text"
                        android:alpha="0.7"
                        app:layout_constraintStart_toStartOf="@id/tv_co2_emi"
                        app:layout_constraintTop_toBottomOf="@id/tv_co2_emi"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_display_co2"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/tv_display_magrment"
                        android:maxLength="9"
                        android:gravity="end"
                        android:ellipsize="end"
                        android:lines="1"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/poppins_semi_bold_600"
                        android:textSize="@dimen/_28ssp"
                        app:layout_constraintStart_toEndOf="@id/tv_weight"
                        android:textColor="@color/color_text"
                        app:autoSizeMaxTextSize="@dimen/_28ssp"
                        android:text="@string/_0_00"
                        app:autoSizeMinTextSize="@dimen/_2ssp"
                        android:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="1sp"
                        app:layout_constraintTop_toBottomOf="@id/tv_co2_emi"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_display_magrment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/poppins_medium_500_14"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textColor="@color/color_text"
                        android:alpha="0.7"
                        android:text="@string/kg"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:maxLength="5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/tv_display_co2"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_distance"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/gl_left"
                    app:layout_constraintEnd_toEndOf="@id/gl_right"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:background="?imgCo2Distance"
                    app:layout_constraintTop_toBottomOf="@id/cl_co2_emi">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_distance"
                        android:layout_marginStart="@dimen/_15sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_distance"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/color_text"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_30sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/poppins_semi_bold_600_18"
                        android:text="@string/distance_travelled"
                        app:autoSizeMaxTextSize="@dimen/_18ssp"
                        app:autoSizeMinTextSize="@dimen/_2ssp"
                        android:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="1sp"
                        app:layout_constraintStart_toEndOf="@id/iv_distance"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_miles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        style="@style/poppins_regular_400_14"
                        android:textColor="@color/color_text"
                        android:alpha="0.7"
                        android:text="@string/kilo_meter"
                        app:layout_constraintStart_toStartOf="@id/tv_distance"
                        app:layout_constraintTop_toBottomOf="@id/tv_distance"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_display_distance"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/tv_display_type"
                        android:gravity="end"
                        android:ellipsize="end"
                        android:lines="1"
                        app:layout_constraintStart_toEndOf="@id/tv_miles"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:includeFontPadding="false"
                        android:text="@string/_0_00"
                        android:fontFamily="@font/poppins_semi_bold_600"
                        android:textSize="@dimen/_28ssp"
                        android:textColor="@color/color_text"
                        app:layout_constraintTop_toBottomOf="@id/tv_distance"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_display_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/poppins_medium_500_14"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textColor="@color/color_text"
                        android:alpha="0.7"
                        android:text="m"
                        android:layout_marginEnd="@dimen/_15sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/tv_display_distance"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_fitness"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/gl_left"
                    app:layout_constraintEnd_toEndOf="@id/gl_right"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:background="?imgCo2Fitness"
                    app:layout_constraintTop_toBottomOf="@id/cl_distance">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_fitness"
                        android:layout_marginStart="@dimen/_15sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_fitness"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/color_text"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_30sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/poppins_semi_bold_600_18"
                        android:text="@string/fitness_plus"
                        app:autoSizeMaxTextSize="@dimen/_18ssp"
                        app:autoSizeMinTextSize="@dimen/_2ssp"
                        android:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="1sp"
                        app:layout_constraintStart_toEndOf="@id/iv_heart"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/time"
                        style="@style/poppins_regular_400_14"
                        android:textColor="@color/color_text"
                        android:alpha="0.7"
                        app:layout_constraintStart_toStartOf="@id/tv_fitness"
                        app:layout_constraintTop_toBottomOf="@id/tv_fitness"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="@dimen/_0sdp"
                        app:layout_constraintStart_toEndOf="@id/tv_time"
                        app:layout_constraintTop_toBottomOf="@id/tv_fitness"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_display_fitness_min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tv_display_fitness_min_type"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/poppins_semi_bold_600"
                            android:textSize="@dimen/_28ssp"
                            android:visibility="gone"
                            android:textColor="@color/color_text"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_display_fitness_min_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/poppins_medium_500_14"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:textColor="@color/color_text"
                            android:alpha="0.7"
                            android:visibility="gone"
                            android:ellipsize="end"
                            android:text="h"
                            android:singleLine="true"
                            app:layout_constraintEnd_toStartOf="@id/tv_display_fitness_sec"
                            android:layout_marginEnd="@dimen/_10sdp"
                            app:layout_constraintBottom_toBottomOf="@id/tv_display_fitness_min"
                            tools:ignore="HardcodedText" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_display_fitness_sec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:gravity="end"
                            android:ellipsize="end"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tv_display_fitness_sec_type"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/poppins_semi_bold_600"
                            android:textSize="@dimen/_28ssp"
                            android:text="@string/_0_00"
                            app:autoSizeMaxTextSize="@dimen/_28ssp"
                            app:autoSizeMinTextSize="@dimen/_2ssp"
                            android:autoSizeTextType="uniform"
                            app:autoSizeStepGranularity="1sp"
                            android:textColor="@color/color_text"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_display_fitness_sec_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/poppins_medium_500_14"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:textColor="@color/color_text"
                            android:alpha="0.7"
                            android:text="min"
                            android:layout_marginEnd="@dimen/_15sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/tv_display_fitness_sec"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_micro"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/gl_left"
                    app:layout_constraintEnd_toEndOf="@id/gl_right"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:background="?imgCo2Micro"
                    app:layout_constraintTop_toBottomOf="@id/cl_fitness">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_micro"
                        android:layout_marginStart="@dimen/_15sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_micro"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/color_text"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_30sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/poppins_semi_bold_600_18"
                        android:text="@string/microplastic"
                        app:autoSizeMaxTextSize="@dimen/_18ssp"
                        app:autoSizeMinTextSize="@dimen/_2ssp"
                        android:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="1sp"
                        app:layout_constraintStart_toEndOf="@id/iv_micro"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_micro_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/weight"
                        style="@style/poppins_regular_400_14"
                        android:textColor="@color/color_text"
                        android:alpha="0.7"
                        app:layout_constraintStart_toStartOf="@id/tv_micro"
                        app:layout_constraintTop_toBottomOf="@id/tv_micro"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_display_micro"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/tv_display_micro_type"
                        android:maxLength="9"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/poppins_semi_bold_600"
                        android:textSize="@dimen/_28ssp"
                        android:gravity="end"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/_0_00"
                        app:layout_constraintStart_toEndOf="@id/tv_micro_time"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textColor="@color/color_text"
                        app:autoSizeMaxTextSize="@dimen/_28ssp"
                        app:autoSizeMinTextSize="@dimen/_2ssp"
                        android:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="1sp"
                        app:layout_constraintTop_toBottomOf="@id/tv_micro"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_display_micro_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/poppins_medium_500_14"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textColor="@color/color_text"
                        android:alpha="0.7"
                        android:text="g"
                        android:layout_marginEnd="@dimen/_15sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/tv_display_micro"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_money"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/gl_left"
                    app:layout_constraintEnd_toEndOf="@id/gl_right"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:background="?imgCo2Money"
                    app:layout_constraintTop_toBottomOf="@id/cl_micro">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_money"
                        android:layout_marginStart="@dimen/_15sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_money"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/color_text"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_30sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/poppins_semi_bold_600_18"
                        android:text="@string/money_saved"
                        app:autoSizeMaxTextSize="@dimen/_18ssp"
