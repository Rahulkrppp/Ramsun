<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<item>
    <shape
        android:shape="rectangle">
        <!-- Set the border color of your layout here -->
        <stroke android:width="@dimen/_1sdp" android:color="@color/color_4D39B27B" />
        <solid android:color="@color/color_4D39B27B" />
        <corners android:bottomLeftRadius="@dimen/_20sdp" android:bottomRightRadius="@dimen/_20sdp"
            />

    </shape>
</item>

<!-- This is for border bottom but
you can change this according to your need -->
<item android:bottom="@dimen/_1sdp"
    android:left="@dimen/_1sdp"
    android:right="@dimen/_1sdp"
    >
    <shape
        android:shape="rectangle">
        <!-- Set the background color of your layout here -->
        <corners android:bottomLeftRadius="@dimen/_20sdp" android:bottomRightRadius="@dimen/_20sdp"
            />
        <stroke android:width="@dimen/_1sdp" android:color="?colorBgHomeManagement" />
        <solid android:color="?colorBgHomeManagement" />
    </shape>
</item>

</layer-list>

